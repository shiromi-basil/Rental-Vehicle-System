<?xml version="1.0" encoding="UTF-8"?>
<persistence xmlns="http://java.sun.com/xml/ns/persistence" version="2.0">

    <persistence-unit name="w1714893PersistenceUnit"
                      transaction-type="RESOURCE_LOCAL">


        <provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>

        <properties>
            <property name="hibernate.archive.autodetection" value="class, hbm"/>

            <property name="hibernate.dialect" value="org.hibernate.dialect.MariaDBDialect"/>
            <property name="hibernate.connection.url" value="jdbc:mysql://localhost/w1714893_westminster_rental_vehicle"/>
            <property name="connection.driver_class" value="com.mysql.jdbc.Driver"/>
            <property name="hibernate.connection.username" value="root"/>

            <property name="hibernate.show_sql" value="true"/>
            <property name="hibernate.hbm2ddl.auto" value="update"/>

            <property
                    name="javax.persistence.schema-generation.database.action" value="update" />

        </properties>

    </persistence-unit>

</persistence>